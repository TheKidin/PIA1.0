<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="PIA1._0.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PIA1._0"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Game Store - Login">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Background="#1A202C">
        <!-- Layout Principal -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Parte Superior Decorativa -->
        <Border Grid.Row="0" Background="#2D3748">
            <Grid>
                <!-- PatrÃ³n de fondo decorativo -->
                <Path Data="M0,0 L200,100 L400,0 L600,100 L800,0 L1000,100 L1200,0" 
                      Stroke="#4A5568" 
                      StrokeThickness="2"
                      Stretch="UniformToFill"
                      Opacity="0.3"/>
            </Grid>
        </Border>

        <!-- Tarjeta de Login Centrada -->
        <Border Grid.Row="1" 
                Background="#2D3748" 
                CornerRadius="16"
                Padding="40"
                Margin="40"
                BorderThickness="1"
                BorderBrush="#4A5568"
                VerticalAlignment="Center">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo y TÃ­tulo -->
                <StackPanel Grid.Row="0" HorizontalAlignment="Center" Spacing="15" Margin="0,0,0,25">
                    <Border Background="#667eea" 
                            Width="70" 
                            Height="70" 
                            CornerRadius="35"
                            Padding="15">
                        <SymbolIcon Symbol="Shop" 
                                   Foreground="White" 
                                   Width="30" 
                                   Height="30"/>
                    </Border>
                    <StackPanel>
                        <TextBlock Text="GameStore" 
                                  FontSize="26" 
                                  FontWeight="Bold" 
                                  Foreground="White"
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="Sistema de GestiÃ³n de Inventario" 
                                  Foreground="#CBD5E0"
                                  FontSize="12"
                                  HorizontalAlignment="Center"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- TÃ­tulo del Formulario -->
                <TextBlock Grid.Row="1" 
                          Text="Iniciar SesiÃ³n" 
                          FontSize="20" 
                          FontWeight="SemiBold" 
                          Foreground="White"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,25"/>

                <!-- Campo Usuario -->
                <StackPanel Grid.Row="2" Spacing="8" Margin="0,0,0,15">
                    <TextBlock Text="ðŸ‘¤ Usuario" 
                              Foreground="#CBD5E0" 
                              FontWeight="SemiBold"
                              FontSize="13"/>
                    <TextBox x:Name="txtUsuario" 
                             PlaceholderText="Ingresa tu nombre de usuario"
                             Height="50"
                             FontSize="14"
                             Background="#4A5568"
                             Foreground="White"
                             BorderBrush="#718096"
                             CornerRadius="8"
                             Padding="15,0"
                             PlaceholderForeground="#A0AEC0"/>
                </StackPanel>

                <!-- Campo ContraseÃ±a -->
                <StackPanel Grid.Row="3" Spacing="8" Margin="0,0,0,20">
                    <TextBlock Text="ðŸ”’ ContraseÃ±a" 
                              Foreground="#CBD5E0" 
                              FontWeight="SemiBold"
                              FontSize="13"/>
                    <PasswordBox x:Name="txtPassword" 
                                 PlaceholderText="Ingresa tu contraseÃ±a"
                                 Height="50"
                                 FontSize="14"
                                 Background="#4A5568"
                                 Foreground="White"
                                 BorderBrush="#718096"
                                 CornerRadius="8"
                                 Padding="15,0"/>
                    <!-- âœ… REMOVIDO: PlaceholderForeground -->
                </StackPanel>

                <!-- Mensaje de Error -->
                <Border x:Name="borderMensajeError"
                        Grid.Row="4"
                        Background="#742A2A" 
                        CornerRadius="8" 
                        Padding="12"
                        BorderThickness="1" 
                        BorderBrush="#C53030"
                        Visibility="Collapsed"
                        Margin="0,0,0,15">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <SymbolIcon Symbol="Cancel" 
                                   Foreground="#FEB2B2"
                                   Width="16" 
                                   Height="16"/>
                        <TextBlock x:Name="txtMensajeError" 
                                  Foreground="#FEB2B2" 
                                  TextWrapping="Wrap"
                                  FontWeight="SemiBold"
                                  FontSize="12"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- BotÃ³n de Login -->
                <Button x:Name="btnLogin" 
                        Grid.Row="5"
                        Content="ðŸš€ Iniciar SesiÃ³n" 
                        Click="BtnLogin_Click" 
                        Background="#667eea"
                        Foreground="White" 
                        Height="50" 
                        FontWeight="SemiBold" 
                        FontSize="14"
                        CornerRadius="8"
                        BorderThickness="0"/>
            </Grid>
        </Border>

        <!-- Parte Inferior Decorativa -->
        <Border Grid.Row="2" Background="#2D3748">
            <Grid>
                <!-- InformaciÃ³n del sistema -->
                <TextBlock Text="GameStore Inventory System v2.0" 
                          Foreground="#718096"
                          FontSize="11"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Bottom"
                          Margin="0,0,0,20"/>
            </Grid>
        </Border>
    </Grid>
</Window>