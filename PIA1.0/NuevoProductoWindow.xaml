<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="PIA1._0.NuevoProductoWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PIA1._0"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
        Title="Agregar Producto - GameStore">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Background="#1A202C">
        <!-- Layout Principal -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Moderno -->
        <Border Grid.Row="0" 
                Background="#2D3748" 
                Padding="25,20"
                BorderThickness="0,0,0,2" 
                BorderBrush="#4A5568">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Ãcono -->
                <Border Grid.Column="0" 
                        Background="#4A5568" 
                        CornerRadius="10" 
                        Padding="10"
                        Margin="0,0,15,0"
                        VerticalAlignment="Center">
                    <SymbolIcon Symbol="Add" 
                               Foreground="White" 
                               Width="24" 
                               Height="24"/>
                </Border>

                <!-- TÃ­tulo y DescripciÃ³n -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Agregar Nuevo Producto" 
                              Foreground="White" 
                              FontSize="20" 
                              FontWeight="Bold"/>
                    <TextBlock Text="Complete la informaciÃ³n del producto" 
                              Foreground="#CBD5E0" 
                              FontSize="12"
                              Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Formulario -->
        <ScrollViewer Grid.Row="1" Padding="25" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="20">

                <!-- InformaciÃ³n BÃ¡sica -->
                <Border Background="#2D3748" 
                        CornerRadius="12" 
                        Padding="20"
                        BorderThickness="1" 
                        BorderBrush="#4A5568">
                    <StackPanel>
                        <TextBlock Text="ðŸ“‹ InformaciÃ³n BÃ¡sica" 
                                  FontSize="16" 
                                  FontWeight="Bold"
                                  Foreground="White"
                                  Margin="0,0,0,15"/>

                        <StackPanel Spacing="15">
                            <TextBox x:Name="txtNombre" 
                                     Header="ðŸŽ® Nombre del Producto" 
                                     PlaceholderText="Ej: The Legend of Zelda: Tears of the Kingdom"
                                     Height="60"
                                     FontSize="14"
                                     Background="#4A5568"
                                     Foreground="White"
                                     BorderBrush="#718096"
                                     PlaceholderForeground="#A0AEC0"/>

                            <TextBox x:Name="txtPlataforma" 
                                     Header="ðŸ–¥ï¸ Plataforma" 
                                     PlaceholderText="Ej: Nintendo Switch, PlayStation 5, Xbox Series X"
                                     Height="60"
                                     FontSize="14"
                                     Background="#4A5568"
                                     Foreground="White"
                                     BorderBrush="#718096"
                                     PlaceholderForeground="#A0AEC0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Precio -->
                <Border Background="#2D3748" 
                        CornerRadius="12" 
                        Padding="20"
                        BorderThickness="1" 
                        BorderBrush="#4A5568">
                    <StackPanel>
                        <TextBlock Text="ðŸ’° Precio" 
                                  FontSize="16" 
                                  FontWeight="Bold"
                                  Foreground="White"
                                  Margin="0,0,0,15"/>

                        <NumberBox x:Name="numPrecio" 
                                   Header="Precio de Venta ($)" 
                                   Minimum="0" 
                                   SmallChange="50"
                                   LargeChange="100"
                                   Value="0"
                                   SpinButtonPlacementMode="Inline"
                                   FontSize="14"
                                   Background="#4A5568"
                                   Foreground="White"
                                   BorderBrush="#718096"/>

                        <TextBlock Text="Ingrese el precio de venta en dÃ³lares" 
                                  FontSize="11"
                                  Foreground="#CBD5E0"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- GestiÃ³n de Stock -->
                <Border Background="#2D3748" 
                        CornerRadius="12" 
                        Padding="20"
                        BorderThickness="1" 
                        BorderBrush="#4A5568">
                    <StackPanel>
                        <TextBlock Text="ðŸ“¦ GestiÃ³n de Stock" 
                                  FontSize="16" 
                                  FontWeight="Bold"
                                  Foreground="White"
                                  Margin="0,0,0,15"/>

                        <Grid ColumnSpacing="15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Stock Actual -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Spacing="5">
                                <TextBlock Text="Stock Actual" 
                                          FontWeight="SemiBold"
                                          Foreground="White"/>
                                <NumberBox x:Name="numStockActual" 
                                           Minimum="0" 
                                           Value="0"
                                           PlaceholderText="0"
                                           FontSize="14"
                                           Background="#4A5568"
                                           Foreground="White"
                                           BorderBrush="#718096"/>
                            </StackPanel>

                            <!-- Stock MÃ­nimo -->
                            <StackPanel Grid.Row="0" Grid.Column="1" Spacing="5">
                                <TextBlock Text="Stock MÃ­nimo" 
                                          FontWeight="SemiBold"
                                          Foreground="White"/>
                                <NumberBox x:Name="numStockMinimo" 
                                           Minimum="0" 
                                           Value="5"
                                           PlaceholderText="5"
                                           FontSize="14"
                                           Background="#4A5568"
                                           Foreground="White"
                                           BorderBrush="#718096"/>
                            </StackPanel>

                            <!-- Stock MÃ¡ximo -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Spacing="5" Margin="0,15,0,0">
                                <TextBlock Text="Stock MÃ¡ximo" 
                                          FontWeight="SemiBold"
                                          Foreground="White"/>
                                <NumberBox x:Name="numStockMaximo" 
                                           Minimum="0" 
                                           Value="100"
                                           PlaceholderText="100"
                                           FontSize="14"
                                           Background="#4A5568"
                                           Foreground="White"
                                           BorderBrush="#718096"/>
                            </StackPanel>

                            <!-- Punto de Reorden -->
                            <StackPanel Grid.Row="1" Grid.Column="1" Spacing="5" Margin="0,15,0,0">
                                <TextBlock Text="Punto de Reorden" 
                                          FontWeight="SemiBold"
                                          Foreground="White"/>
                                <NumberBox x:Name="numPuntoReorden" 
                                           Minimum="0" 
                                           Value="10"
                                           PlaceholderText="10"
                                           FontSize="14"
                                           Background="#4A5568"
                                           Foreground="White"
                                           BorderBrush="#718096"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="El sistema alertarÃ¡ cuando el stock estÃ© por debajo del punto de reorden" 
                                  FontSize="11"
                                  Foreground="#CBD5E0"
                                  Margin="0,10,0,0"
                                  TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Mensaje de Error -->
                <Border x:Name="borderMensajeError"
                        Background="#742A2A" 
                        CornerRadius="8" 
                        Padding="15"
                        BorderThickness="1" 
                        BorderBrush="#C53030"
                        Visibility="Collapsed">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <SymbolIcon Symbol="Cancel" 
                                   Foreground="#FEB2B2"
                                   Width="16" 
                                   Height="16"/>
                        <TextBlock x:Name="txtMensajeError" 
                                  Foreground="#FEB2B2" 
                                  TextWrapping="Wrap"
                                  FontWeight="SemiBold"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer con Botones -->
        <Border Grid.Row="2" 
                Background="#2D3748" 
                Padding="20"
                BorderThickness="1,0,0,0" 
                BorderBrush="#4A5568">
            <Grid ColumnSpacing="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- BotÃ³n Cancelar -->
                <Button x:Name="btnCancelar" 
                        Content="Cancelar" 
                        Click="BtnCancelar_Click"
                        Grid.Column="0"
                        Background="Transparent"
                        BorderBrush="#718096"
                        BorderThickness="1"
                        Foreground="#CBD5E0"
                        CornerRadius="8"
                        Height="45"
                        FontWeight="SemiBold"/>

                <!-- BotÃ³n Guardar -->
                <Button x:Name="btnGuardar" 
                        Content="ðŸ’¾ Guardar Producto" 
                        Click="BtnGuardar_Click"
                        Grid.Column="1"
                        Background="#48BB78"
                        Foreground="White"
                        BorderThickness="0"
                        CornerRadius="8"
                        Height="45"
                        FontWeight="SemiBold"
                        FontSize="14"/>
            </Grid>
        </Border>
    </Grid>
</Window>