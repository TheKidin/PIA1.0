<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="PIA1._0.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PIA1._0"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:PIA1._0.Models"
    mc:Ignorable="d"
    Title="PIA1.0">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Background="LightGray">
        <Grid.Resources>
            <local:CurrencyConverter x:Key="CurrencyConverter"/>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#667eea" 
                 Padding="20,15" BorderThickness="0,0,0,2" BorderBrush="#5a67d8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="White" CornerRadius="10" Padding="8" Margin="0,0,15,0">
                        <SymbolIcon Symbol="Shop" Foreground="#667eea" Width="28" Height="28"/>
                    </Border>
                    <StackPanel>
                        <TextBlock Text="GameStore" 
                                   Foreground="White" 
                                  FontSize="24" 
                                  FontWeight="Bold"/>
                        <TextBlock Text="Sistema de GestiÃ³n de Inventario" 
                                  Foreground="#E2E8F0" 
                                  FontSize="12"/>
                    </StackPanel>
                </StackPanel>

                <Grid Grid.Column="1" HorizontalAlignment="Center" Width="700" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ComboBox x:Name="cmbPlataforma" Grid.Column="0" 
                              Background="Gray" BorderBrush="#E2E8F0"
                              CornerRadius="8" FontSize="12" 
                              SelectionChanged="CmbPlataforma_SelectionChanged"
                              Margin="0,0,10,0">
                        <ComboBoxItem Content="ðŸŽ® Cargando plataformas..." IsEnabled="False"/>
                    </ComboBox>

                    <ComboBox x:Name="cmbFiltroExtra" Grid.Column="1" 
                              Background="Gray" BorderBrush="#E2E8F0"
                              CornerRadius="8" FontSize="12" 
                               SelectionChanged="CmbFiltroExtra_SelectionChanged"
                              Margin="10,0,10,0">
                        <ComboBoxItem Content="ðŸ“Š Todos los productos" Tag="Todos" IsSelected="True"/>
                        <ComboBoxItem Content="âš ï¸ Bajo Stock" Tag="bajo_stock"/>
                        <ComboBoxItem Content="âŒ Sin Stock" Tag="sin_stock"/>
                        <ComboBoxItem Content="ðŸ“ˆ Stock Alto" Tag="stock_alto"/>
                        <ComboBoxItem Content="ðŸ’° Precio Alto ($500+)" Tag="precio_alto"/>
                        <ComboBoxItem Content="ðŸ’¸ Precio Bajo ($100-)" Tag="precio_bajo"/>
                    </ComboBox>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                        <Button x:Name="btnBuscar" 
                                Content="ðŸ” Buscar" 
                                Click="BtnBuscar_Click"
                                 Background="#48BB78"
                                Foreground="White"
                                BorderThickness="0"
                                 CornerRadius="20"
                                Padding="15,10"
                                FontSize="12"
                                 FontWeight="SemiBold"
                                ToolTipService.ToolTip="Aplicar filtros"/>

                        <Button x:Name="btnLimpiar" 
                                 Content="ðŸ”„ Limpiar" 
                                Click="BtnLimpiar_Click"
                                Background="#A0AEC0"
                                 Foreground="White"
                                BorderThickness="0"
                                CornerRadius="20"
                                Padding="15,10"
                                 FontSize="12"
                                FontWeight="SemiBold"
                                ToolTipService.ToolTip="Limpiar filtros"/>
                    </StackPanel>
                </Grid>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="15" VerticalAlignment="Center">
                    <Border Background="#4A5568" CornerRadius="15" Padding="10,6">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <SymbolIcon Symbol="Contact" Foreground="White"/>
                            <TextBlock x:Name="txtUsuarioActual" 
                                      Text="Administrador" 
                                      Foreground="White"
                                       FontWeight="SemiBold"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Button x:Name="btnNuevoProducto" 
                            Content="Nuevo Producto" 
                             Click="BtnNuevoProducto_Click"
                            Background="#ED8936"
                            Foreground="White"
                            BorderThickness="0"
                             CornerRadius="20"
                            Padding="15,8"
                            FontWeight="SemiBold"/>

                    <Button x:Name="btnCerrarSesion" 
                             Content="Salir" 
                            Click="BtnCerrarSesion_Click"
                            Background="#E53E3E"
                             Foreground="White"
                            BorderThickness="0"
                            CornerRadius="20"
                            Padding="15,8"
                             FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Padding="25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" 
                    Background="Gray" 
                     CornerRadius="12" 
                    Padding="0"
                    BorderThickness="1" 
                    BorderBrush="#E2E8F0"
                    Margin="0,0,15,0">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                            Background="#F7FAFC" 
                            CornerRadius="12,12,0,0"
                             Padding="20,15"
                            BorderThickness="0,0,0,1"
                            BorderBrush="#E2E8F0">
                        <Grid>
                            <TextBlock Text="Inventario de Productos" 
                                      FontSize="18" 
                                       FontWeight="Bold"
                                      Foreground="#2D3748"/>
                            <TextBlock Text="GestiÃ³n completa de stock y productos"
                                         FontSize="12"
                                      Foreground="#718096"
                                       Margin="0,25,0,0"/>
                        </Grid>
                    </Border>

                    <ScrollViewer Grid.Row="1" Padding="0">
                        <ListView x:Name="lvInventario"
                                 SelectionMode="Single"
                                 BorderThickness="0"
                                  Background="Transparent">

                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="models:InventarioProducto">
                                    <Border Background="White" 
                                            Margin="10,5" 
                                             CornerRadius="8"
                                            BorderThickness="1" 
                                            BorderBrush="#E2E8F0"
                                             Padding="15">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="120"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" Orientation="Vertical">
                                                <TextBlock Text="{Binding NombreProducto}" 
                                                           FontWeight="SemiBold"
                                                          Foreground="#2D3748"/>
                                                <TextBlock Text="{Binding Plataforma}" 
                                                          FontSize="12"
                                                           Foreground="#718096"
                                                          Margin="0,2,0,0"/>
                                            </StackPanel>

                                            <Border Grid.Column="1" Background="#F0FFF4" CornerRadius="4" 
                                                    Margin="5" Padding="8" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding PrecioVenta, Converter={StaticResource CurrencyConverter}}" 
                                                          Foreground="#38A169"
                                                                       FontWeight="Bold"
                                                           HorizontalAlignment="Center"/>
                                            </Border>

                                            <TextBlock Grid.Column="2" 
                                                       Text="{Binding CantidadActual}" 
                                                      VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"
                                                      FontWeight="Bold"/>

                                            <TextBlock Grid.Column="3" 
                                                       Text="{Binding StockMinimo}" 
                                                      VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"
                                                      FontWeight="SemiBold"/>

                                            <TextBlock Grid.Column="4" 
                                                       Text="{Binding StockMaximo}" 
                                                      VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"
                                                      FontWeight="SemiBold"/>

                                            <TextBlock Grid.Column="5" 
                                                       Text="{Binding PuntoReorden}" 
                                                      VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"
                                                       FontWeight="SemiBold"
                                                      Foreground="#D69E2E"/>

                                            <StackPanel Grid.Column="6" 
                                                        Orientation="Horizontal" 
                                                        Spacing="8"
                                                         VerticalAlignment="Center"
                                                        HorizontalAlignment="Center">
                                                <Button Content="Editar" 
                                                        Click="BtnEditar_Click"
                                                         Tag="{Binding ProductoId}"
                                                        Background="Transparent"
                                                          BorderThickness="0"
                                                         Padding="8"
                                                        FontSize="12"
                                                         Foreground="#3182CE"/>

                                                <Button Content="Eliminar" 
                                                        Click="BtnEliminar_Click"
                                                        Tag="{Binding ProductoId}"
                                                         Background="Transparent"
                                                        BorderThickness="0"
                                                          Padding="8"
                                                         FontSize="12"
                                                        Foreground="#E53E3E"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </ScrollViewer>
                </Grid>
            </Border>

            <StackPanel Grid.Column="1" Spacing="15">
                <Border Background="White" 
                         CornerRadius="12" 
                        Padding="20"
                        BorderThickness="1" 
                        BorderBrush="#E2E8F0">
                    <StackPanel>
                        <TextBlock Text="Resumen General" 
                                  FontSize="16" 
                                  FontWeight="Bold"
                                   Foreground="#2D3748"
                                  Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Row="0" Grid.Column="0" 
                                    Background="#EBF8FF" 
                                    CornerRadius="8" 
                                     Padding="12" 
                                    Margin="0,0,5,8">
                                <StackPanel>
                                    <TextBlock Text="Productos" 
                                              FontSize="11"
                                               Foreground="#718096"
                                              HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="txtTotalProductos" Text="0" 
                                              FontSize="20" 
                                               FontWeight="Bold"
                                              Foreground="#3182CE"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Row="0" Grid.Column="1" 
                                    Background="#F0FFF4" 
                                    CornerRadius="8" 
                                     Padding="12" 
                                    Margin="5,0,0,8">
                                <StackPanel>
                                    <TextBlock Text="En Stock" 
                                              FontSize="11"
                                               Foreground="#718096"
                                              HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="txtTotalStock" Text="0" 
                                              FontSize="20" 
                                               FontWeight="Bold"
                                              Foreground="#38A169"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Row="1" Grid.Column="0" 
                                    Background="#FFFAF0" 
                                    CornerRadius="8" 
                                    Padding="12" 
                                    Margin="0,8,5,8">
                                <StackPanel>
                                    <TextBlock Text="Valor Total" 
                                              FontSize="11"
                                               Foreground="#718096"
                                              HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="txtValorInventario" Text="$0.00" 
                                              FontSize="16" 
                                               FontWeight="Bold"
                                              Foreground="#DD6B20"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Border x:Name="borderBajoStock" 
                                    Grid.Row="1" Grid.Column="1" 
                                    Background="#FFF5F5" 
                                    CornerRadius="8" 
                                    Padding="12" 
                                    Margin="5,8,0,8"
                                    PointerPressed="borderBajoStock_PointerPressed"
                                    ToolTipService.ToolTip="Click para filtrar productos con bajo stock">
                                <StackPanel>
                                    <TextBlock Text="Bajo Stock" 
                                              FontSize="11"
                                               Foreground="#718096"
                                              HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="txtBajoStock" Text="0" 
                                              FontSize="20" 
                                               FontWeight="Bold"
                                              Foreground="#E53E3E"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                    Background="#FAF5FF" 
                                     CornerRadius="8" 
                                    Padding="12" 
                                    Margin="0,8,0,0">
                                <StackPanel>
                                    <TextBlock Text="Precio Promedio" 
                                              FontSize="11"
                                               Foreground="#718096"
                                              HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="txtPrecioPromedio" Text="$0.00" 
                                              FontSize="16" 
                                               FontWeight="Bold"
                                              Foreground="#805AD5"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <Button x:Name="btnActualizarStats" 
                                Content="Actualizar EstadÃ­sticas" 
                                Click="BtnActualizarStats_Click"
                                 Background="#4C51BF"
                                Foreground="White"
                                BorderThickness="0"
                                 CornerRadius="8"
                                Padding="12"
                                FontWeight="SemiBold"
                                 Margin="0,15,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <Border Grid.Row="2" 
                 Background="#2D3748"
                Padding="15">
            <Grid>
                <TextBlock Text="GameStore Inventory System v2.0 â€¢ Conectado a Base de Datos SQL Server" 
                          Foreground="#A0AEC0"
                           HorizontalAlignment="Center"
                          FontSize="12"/>
            </Grid>
        </Border>
    </Grid>
</Window>